	<taskdef name="retroweaver" classname="net.sourceforge.retroweaver.ant.RetroWeaverTask">
	  <classpath>
	    <fileset dir="${retroweaver.home}/lib" includes="**/*"/>
	    <fileset dir="${retroweaver.home}/release" includes="**/*"/> 
<!--	    <pathelement location="${retroweaver.home}/release/retroweaver-2.0Beta2.jar"/>-->
	  </classpath>
	</taskdef>
	<taskdef name="fatjar.build" classname="net.sf.fjep.anttask.FJBuildTask" classpath="${fjepPath}" loaderref="${fjepPath}"/>
<!--	<taskdef name="retroweaver" classname="net.sourceforge.retroweaver.ant.RetroWeaverTask" classpath="retroweaver-2.0Beta2/release/retroweaver-all-2.0Beta2.jar" />-->
	<typedef name="fatjar.manifest" classname="net.sf.fjep.anttask.FJManifestType" classpath="${fjepPath}" loaderref="${fjepPath}"/>
	<typedef name="fatjar.exclude" classname="net.sf.fjep.anttask.FJExcludeType" classpath="${fjepPath}" loaderref="${fjepPath}"/>
	<typedef name="fatjar.jarsource" classname="net.sf.fjep.anttask.FJJarSourceType" classpath="${fjepPath}" loaderref="${fjepPath}"/>
	<typedef name="fatjar.filesource" classname="net.sf.fjep.anttask.FJFileSourceType" classpath="${fjepPath}" loaderref="${fjepPath}"/>
	<typedef name="fatjar.autojar" classname="net.sf.fjep.anttask.FJAutoJarType" classpath="${fjepPath}" loaderref="${fjepPath}"/>
	<typedef name="fatjar.class" classname="net.sf.fjep.anttask.FJClassType" classpath="${fjepPath}" loaderref="${fjepPath}"/>
	
    <target depends="build" name="build_fatjar">
        <fatjar.build output="Buddi.jar">
            <fatjar.manifest mainclass="org.homeunix.drummer.Buddi"/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/bin" relpath="">
                <fatjar.exclude relpath=".svn/"/>
            </fatjar.filesource>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/jfreechart-1.0.1.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/jcommon-1.0.5.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/truefilter-1.2.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/MRJAdapter-1.0.9.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/jcalendar-1.3.2.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/Moss.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/emf/emf.ecore.xmi_2.2.1.v200609210005.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/emf/emf.ecore_2.2.1.v200609210005.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/emf/emf.common_2.2.1.v200609210005.jar" relpath=""/>
            <fatjar.jarsource file="/Users/wyatt/Documents/Programming/Workplace/Buddi/lib/BrowserLauncher2-10rc4.jar" relpath=""/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/images/Buddi.gif" relpath="Buddi.gif"/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/images/Buddi.png" relpath="Buddi.png"/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/Languages/Deutsch.lang" relpath="Deutsch.lang"/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/Languages/English.lang" relpath="English.lang"/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/Languages/English_(US).lang" relpath="English_(US).lang"/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/Languages/Espanol.lang" relpath="Espanol.lang"/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/Languages/Norsk.lang" relpath="Norsk.lang"/>
            <fatjar.filesource path="/Users/wyatt/Documents/Programming/Workplace/Buddi/Languages/Nederlands.lang" relpath="Nederlands.lang"/>
